<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invitatinbg"
    tools:context=".InvitationActivity">
    <ImageView
        android:id="@+id/incomingmeetimgvideo"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content">
    </ImageView>
    <TextView
        android:layout_below="@id/incomingmeetimgvideo"
        android:textSize="@dimen/_15sdp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:id="@+id/initemeet"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="incoming invitation meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
   <RelativeLayout
       android:layout_below="@+id/initemeet"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/leanly"
           android:orientation="vertical"
           android:layout_centerInParent="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/userfrstchar"
               android:background="@drawable/userbg"
               android:textSize="@dimen/_20sdp"
               android:textAlignment="center"
               android:padding="@dimen/_20sdp"
               android:layout_width="@dimen/_80sdp"
               android:layout_gravity="center"
               android:layout_height="@dimen/_80sdp">
           </TextView>
           <TextView
               android:layout_marginTop="@dimen/_10sdp"
               android:id="@+id/incomingName"
               android:textAlignment="center"
               android:textSize="@dimen/_12sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           </TextView>
           <TextView
               android:layout_marginTop="@dimen/_5sdp"
               android:id="@+id/incomingemail"
               android:textAlignment="center"
               android:textSize="@dimen/_12sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           </TextView>
       </LinearLayout>
       <ImageView
           android:id="@+id/pickimg"
           android:layout_marginTop="@dimen/_60sdp"
           android:layout_marginLeft="@dimen/_20sdp"
           android:background="@drawable/receivebg"
           android:layout_below="@id/leanly"
           android:src="@drawable/ic_baseline_check_24"
           android:layout_width="@dimen/_60sdp"
           android:layout_height="@dimen/_60sdp">
       </ImageView>
       <ImageView
           android:id="@+id/cancleimg"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/_20sdp"
           android:layout_marginTop="@dimen/_60sdp"
           android:layout_marginLeft="@dimen/_20sdp"
           android:layout_below="@id/leanly"
           android:src="@drawable/cancel"
           android:backgroundTint="@android:color/white"
           android:layout_width="@dimen/_60sdp"
           android:layout_height="@dimen/_60sdp">
       </ImageView>
   </RelativeLayout>
</RelativeLayout>